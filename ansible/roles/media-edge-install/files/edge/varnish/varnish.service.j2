[Unit]
Description=Varnish HTTP accelerator
Documentation=https://www.varnish-cache.org/docs/6.1/ man:varnishd

[Service]
Type=simple
LimitNOFILE=infinity
LimitMEMLOCK=infinity
ExecStart=/usr/sbin/varnishd -j unix,user=vcache -F -a localhost:8080 -T localhost:6082 -f /etc/varnish/default.vcl -s file,/var/cache/varnish.cache,"{{ disk_space.user_input }}G"
ExecReload=/usr/share/varnish/varnishreload
ProtectSystem=full
ProtectHome=true
PrivateTmp=true
PrivateDevices=true
Restart=always
RestartSec=5


[Install]
WantedBy=multi-user.target