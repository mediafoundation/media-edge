- name: Restart Caddy
  command:
    cmd: 'systemctl restart caddy'
    chdir: /root/

- name: Copy program folder
  synchronize:
    src: ../origin/
    dest: /root/origin
    rsync_opts:
      - "--exclude=node_modules/"
      - "--exclude=yarn.lock"
      - "--exclude=.git"

